{
  "name": "@bpmn-io/bpmnlint-generate-docs-images",
  "version": "0.3.0",
  "description": "Generate documentation images for bpmnlint rules",
  "scripts": {
    "all": "npm run test",
    "pretest": "mkdir -p tmp",
    "test": "run-s test:*",
    "test:bpmnlint": "(cd tmp && npx degit github:bpmn-io/bpmnlint bpmnlint --force && node ../cmd.js bpmnlint --verbose)",
    "test:example": "(cd tmp && npx degit github:bpmn-io/bpmnlint-plugin-example example --force && node ../cmd.js example --verbose)"
  },
  "bin": "cmd.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bpmn-io/bpmnlint-generate-docs-images.git"
  },
  "author": {
    "name": "Nico Rehwaldt",
    "url": "https://github.com/nikku"
  },
  "license": "MIT",
  "dependencies": {
    "bpmn-js": "^11.3.1",
    "bpmn-js-bpmnlint": "^0.20.0",
    "bpmnlint": "^8.1.1",
    "mri": "^1.1.4",
    "puppeteer": "^19.7.0",
    "rollup": "^3.15.0",
    "rollup-plugin-bpmnlint": "^0.3.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "tiny-glob": "^0.2.6"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "files": [
    "src",
    "cmd.js"
  ]
}
